<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="settings_segmented_control_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:layout_marginLeft">@dimen/settings_side_padding</item>
        <item name="android:layout_marginRight">@dimen/settings_side_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MscRadioButtonVertical" parent="RadioButton">
        <item name="android:textSize">18dp</item>
        <item name="android:color">@color/medium_grey</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>


</resources>
